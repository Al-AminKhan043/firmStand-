<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Product</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Light grey background */
        }

        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: #ffffff; /* White form background */
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); /* Subtle shadow */
        }

        h1 {
            text-align: center;
            color: #28a745; /* Bootstrap green */
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #495057;
        }

        .btn-primary {
            background-color: #28a745;
            border: none;
        }

        .btn-primary:hover {
            background-color: #218838; /* Darker green on hover */
        }

        .btn-secondary {
            margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h1>Add New Product</h1>
            <form action="/products" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Product Name:</label>
                    <input id="name" type="text" name="name" class="form-control" placeholder="Product Name">
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Product Price:</label>
                    <input id="price" type="number" step="0.01" name="price" class="form-control" placeholder="Product Price">
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Select Category:</label>
                    <select name="category" id="category" class="form-select">
                        <% for (let category of categories) { %>
                            <option value="<%= category %>"><%= category %></option>
                        <% } %>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>

            <div class="mt-4 text-center">
                <a href="/products" class="btn btn-secondary">Home Page</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
